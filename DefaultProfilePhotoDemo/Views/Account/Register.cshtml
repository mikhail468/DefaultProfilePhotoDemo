@model AccountRegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<div class="container" style="max-width:600px;">
    <form asp-action="Register" asp-controller="Account" method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <div class="container">
                <input class="form-control" placeholder="User Name (less than 256 characters)" asp-for="UserName" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="container">
                <input class="form-control" placeholder="Password" asp-for="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="container">
                <button type="submit" class="btn primary mt-3 w-100">Sign up</button>
            </div>
        </div>

    </form>
</div>